<Window x:Class="IotDevice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IotDevice"
        mc:Ignorable="d"
        Title="IOT DEVICE" Height="210" Width="350">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="DeviceId" FontSize="9" />
            <TextBlock x:Name="tblockDeviceId" Margin="0 0 0 20" />
            <Button x:Name="btnConnect" Content="" Padding="10 10 10 10" Click="btnConnect_Click" IsEnabled="False" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 20 0 0" >
            <TextBlock Text="Status: " />
            <TextBlock x:Name="tblockInfo" Margin="10 0 0 0" />
        </StackPanel>


    </Grid>
</Window>
